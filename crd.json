{
  "apiVersion": "apiextensions.k8s.io/v1",
  "kind": "CustomResourceDefinition",
  "metadata": {
    "name": "images.imagecontroller.k8s.io",
    "annotations": {
      "api-approved.kubernetes.io": "unapproved, experimental-only; please get an approval from Kubernetes API reviewers if you're trying to develop a CRD in the *.k8s.io or *.kubernetes.io groups"
    }
  },
  "spec": {
    "group": "imagecontroller.k8s.io",
    "versions": [
      {
        "name": "v1alpha1",
        "served": true,
        "storage": true,
        "additionalPrinterColumns": [
          {
            "jsonPath": ".status.conditions[?(@.type==\"Ready\")].status",
            "name": "Ready",
            "type": "string"
          },
          {
            "jsonPath": ".status.conditions[?(@.type==\"Ready\")].message",
            "name": "Status",
            "priority": 1,
            "type": "string"
          },
          {
            "jsonPath": ".metadata.creationTimestamp",
            "description": "CreationTimestamp is a timestamp representing the server time when this object was created. It is not guaranteed to be set in happens-before order across separate operations. Clients may not set this value. It is represented in RFC3339 form and is in UTC.",
            "name": "Age",
            "type": "date"
          }
        ],
        "schema": {
          "openAPIV3Schema": {
            "type": "object",
            "properties": {
              "spec": {
                "type": "object",
                "properties": {
                  "registry": {
                    "type": "string"
                  },
                  "repository": {
                    "type": "string"
                  },
                  "tag": {
                    "type": "string"
                  },
                  "containerfile": {
                    "type": "string"
                  },
                  "buildArgs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "value": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "status": {
                "description": "Status of the Issuer. This is set and managed automatically.",
                "type": "object",
                "properties": {
                  "image": {
                    "description": "Fully qualified name of image",
                    "type": "string"
                  },
                  "conditions": {
                    "description": "List of status conditions to indicate the status of a Image. Known condition types are `Ready`.",
                    "type": "array",
                    "items": {
                      "description": "ImageCondition contains condition information for an Image.",
                      "type": "object",
                      "required": [
                        "status",
                        "type"
                      ],
                      "properties": {
                        "lastTransitionTime": {
                          "description": "LastTransitionTime is the timestamp corresponding to the last status change of this condition.",
                          "type": "string",
                          "format": "date-time"
                        },
                        "message": {
                          "description": "Message is a human readable description of the details of the last transition, complementing reason.",
                          "type": "string"
                        },
                        "reason": {
                          "description": "Reason is a brief machine readable explanation for the condition's last transition.",
                          "type": "string"
                        },
                        "status": {
                          "description": "Status of the condition, one of (`True`, `False`, `Unknown`).",
                          "type": "string",
                          "enum": [
                            "True",
                            "False",
                            "Unknown"
                          ]
                        },
                        "type": {
                          "description": "Type of the condition, known values are (`Ready`).",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "subresources": {
          "status": {}
        }
      }
    ],
    "names": {
      "kind": "Image",
      "plural": "images"
    },
    "scope": "Namespaced"
  }
}
